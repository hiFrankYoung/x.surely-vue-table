{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "lib": [
            "DOM",
            "ESNext"
        ],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "outDir": "dist",
        "strict": true,
        "target": "ES2015"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}